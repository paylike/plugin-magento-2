<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <!-- Payment Method Facade configuration -->
    <virtualType name="PaylikeFacade" type="Magento\Payment\Model\Method\Adapter">
        <arguments>
            <argument name="code" xsi:type="const">\Esparks\Paylike\Model\Ui\ConfigProvider::PLUGIN_CODE</argument>
            <argument name="formBlockType" xsi:type="string">Magento\Payment\Block\Form</argument>
            <argument name="infoBlockType" xsi:type="string">Esparks\Paylike\Block\Info</argument>
            <argument name="valueHandlerPool" xsi:type="object">PaylikeValueHandlerPool</argument>
            <argument name="commandPool" xsi:type="object">PaylikeCommandPool</argument>
        </arguments>
    </virtualType>

    <!-- Configuration reader -->
    <virtualType name="PaylikeConfig" type="Magento\Payment\Gateway\Config\Config">
        <arguments>
            <argument name="methodCode" xsi:type="const">\Esparks\Paylike\Model\Ui\ConfigProvider::PLUGIN_CODE</argument>
        </arguments>
    </virtualType>

    <!-- Logger, initialized with PaylikeConfig -->
    <virtualType name="PaylikeLogger" type="Magento\Payment\Model\Method\Logger">
        <arguments>
            <argument name="config" xsi:type="object">PaylikeConfig</argument>
        </arguments>
    </virtualType>

    <type name="Esparks\Paylike\Gateway\Http\Client\TransactionAuthorize">
        <arguments>
            <argument name="logger" xsi:type="object">PaylikeLogger</argument>
        </arguments>
    </type>

    <type name="Esparks\Paylike\Gateway\Http\Client\TransactionCapture">
        <arguments>
            <argument name="logger" xsi:type="object">PaylikeLogger</argument>
        </arguments>
    </type>

    <type name="Esparks\Paylike\Gateway\Http\Client\TransactionVoid">
        <arguments>
            <argument name="logger" xsi:type="object">PaylikeLogger</argument>
        </arguments>
    </type>

    <type name="Esparks\Paylike\Gateway\Http\Client\TransactionRefund">
        <arguments>
            <argument name="logger" xsi:type="object">PaylikeLogger</argument>
        </arguments>
    </type>

    <type name="Esparks\Paylike\Gateway\Response\TxnIdHandler">
        <arguments>
            <argument name="logger" xsi:type="object">PaylikeLogger</argument>
        </arguments>
    </type>

    <type name="Esparks\Paylike\Observer\CheckoutAllSubmitAfterObserver">
        <arguments>
            <argument name="logger" xsi:type="object">PaylikeLogger</argument>
        </arguments>
    </type>

    <!-- Commands infrastructure -->
    <virtualType name="PaylikeCommandPool" type="Magento\Payment\Gateway\Command\CommandPool">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="authorize" xsi:type="string">PaylikeAuthorizeCommand</item>
                <item name="capture" xsi:type="string">PaylikeCaptureCommand</item>
                <item name="sale" xsi:type="string">PaylikeSaleCommand</item>
                <item name="void" xsi:type="string">PaylikeVoidCommand</item>
                <item name="cancel" xsi:type="string">PaylikeVoidCommand</item>
                <item name="refund" xsi:type="string">PaylikeRefundCommand</item>
            </argument>
        </arguments>
    </virtualType>

    <!-- Authorize command -->
    <virtualType name="PaylikeAuthorizeCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">PaylikeAuthorizationRequest</argument>
            <argument name="handler" xsi:type="object">PaylikeResponseHandlerComposite</argument>
            <argument name="transferFactory" xsi:type="object">Esparks\Paylike\Gateway\Http\TransferFactory</argument>
            <argument name="client" xsi:type="object">Esparks\Paylike\Gateway\Http\Client\TransactionAuthorize</argument>
        </arguments>
    </virtualType>

    <!-- Authorization Request -->
    <virtualType name="PaylikeAuthorizationRequest" type="Magento\Payment\Gateway\Request\BuilderComposite">
        <arguments>
            <argument name="builders" xsi:type="array">
                <item name="transaction" xsi:type="string">Esparks\Paylike\Gateway\Request\AuthorizationRequest</item>
            </argument>
        </arguments>
    </virtualType>
    <type name="Esparks\Paylike\Gateway\Request\AuthorizationRequest">
        <arguments>
            <argument name="config" xsi:type="object">PaylikeConfig</argument>
        </arguments>
    </type>

    <!-- Capture command -->
    <virtualType name="PaylikeCaptureCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">Esparks\Paylike\Gateway\Request\CaptureRequest</argument>
            <argument name="handler" xsi:type="object">Esparks\Paylike\Gateway\Response\TxnIdHandler</argument>
            <argument name="transferFactory" xsi:type="object">Esparks\Paylike\Gateway\Http\TransferFactory</argument>
            <argument name="validator" xsi:type="object">Esparks\Paylike\Gateway\Validator\ResponseCodeValidator</argument>
            <argument name="client" xsi:type="object">Esparks\Paylike\Gateway\Http\Client\TransactionCapture</argument>
        </arguments>
    </virtualType>

    <!-- Capture Request -->
    <type name="Esparks\Paylike\Gateway\Request\CaptureRequest">
        <arguments>
            <argument name="config" xsi:type="object">PaylikeConfig</argument>
        </arguments>
    </type>

    <!-- Authorization&Capture command  -->
    <virtualType name="PaylikeSaleCommand" type="PaylikeAuthorizeCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">PaylikeSaleRequest</argument>
        </arguments>
    </virtualType>
    <virtualType name="PaylikeSaleRequest" type="Magento\Payment\Gateway\Request\BuilderComposite">
        <arguments>
            <argument name="builders" xsi:type="array">
                <item name="authorize" xsi:type="string">PaylikeAuthorizationRequest</item>
                <item name="capture" xsi:type="string">Esparks\Paylike\Gateway\Request\CaptureRequest</item>
            </argument>
        </arguments>
    </virtualType>

    <!-- Void command -->
    <virtualType name="PaylikeVoidCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">Esparks\Paylike\Gateway\Request\VoidRequest</argument>
            <argument name="handler" xsi:type="object">Esparks\Paylike\Gateway\Response\TxnIdHandler</argument>
            <argument name="transferFactory" xsi:type="object">Esparks\Paylike\Gateway\Http\TransferFactory</argument>
            <argument name="validator" xsi:type="object">Esparks\Paylike\Gateway\Validator\ResponseCodeValidator</argument>
            <argument name="client" xsi:type="object">Esparks\Paylike\Gateway\Http\Client\TransactionVoid</argument>
        </arguments>
    </virtualType>

    <!-- Void Request -->
    <type name="Esparks\Paylike\Gateway\Request\VoidRequest">
        <arguments>
            <argument name="config" xsi:type="object">PaylikeConfig</argument>
        </arguments>
    </type>

    <!-- Refund command -->
    <virtualType name="PaylikeRefundCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">Esparks\Paylike\Gateway\Request\RefundRequest</argument>
            <argument name="handler" xsi:type="object">Esparks\Paylike\Gateway\Response\TxnIdHandler</argument>
            <argument name="transferFactory" xsi:type="object">Esparks\Paylike\Gateway\Http\TransferFactory</argument>
            <argument name="validator" xsi:type="object">Esparks\Paylike\Gateway\Validator\ResponseCodeValidator</argument>
            <argument name="client" xsi:type="object">Esparks\Paylike\Gateway\Http\Client\TransactionRefund</argument>
        </arguments>
    </virtualType>

    <!-- Refund Request -->
    <type name="Esparks\Paylike\Gateway\Request\RefundRequest">
        <arguments>
            <argument name="config" xsi:type="object">PaylikeConfig</argument>
        </arguments>
    </type>

    <!-- Response handlers -->
    <virtualType name="PaylikeResponseHandlerComposite" type="Magento\Payment\Gateway\Response\HandlerChain">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="txnid" xsi:type="string">Esparks\Paylike\Gateway\Response\TxnIdHandler</item>
                <item name="fraud" xsi:type="string">Esparks\Paylike\Gateway\Response\FraudHandler</item>
            </argument>
        </arguments>
    </virtualType>

    <!-- Value handlers infrastructure -->
    <virtualType name="PaylikeValueHandlerPool" type="Magento\Payment\Gateway\Config\ValueHandlerPool">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="default" xsi:type="string">PaylikeConfigValueHandler</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="PaylikeConfigValueHandler" type="Magento\Payment\Gateway\Config\ConfigValueHandler">
        <arguments>
            <argument name="configInterface" xsi:type="object">PaylikeConfig</argument>
        </arguments>
    </virtualType>

    <type name="Esparks\Paylike\Block\Info">
        <arguments>
            <argument name="config" xsi:type="object">PaylikeConfig</argument>
        </arguments>
    </type>

</config>
